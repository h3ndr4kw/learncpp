{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "BUILD",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${workspaceFolder}/*.cpp",
                "${workspaceFolder}/include/*.cpp",
                "-o",
                "${workspaceFolder}/bin/main"
            ],
            "detail": "Task generated by Debugger.",
        },
        {
            "label": "Run",
            "type": "shell",
            "command": "./bin/main",
            "dependsOn": [
                "BUILD"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}